# Unified deploy config for RooneyForm
# Fill values and run: ./deploy/render.sh

APP_NAME=rooneyform
APP_USER=www-data
APP_DIR=/var/www/rooneyform_app

DOMAIN=rooneyform.store
DOMAIN_WWW=www.rooneyform.store
API_DOMAIN=api.rooneyform.store

BACKEND_HOST=127.0.0.1
BACKEND_PORT=8000
BACKEND_APP=main:app
GUNICORN_WORKERS=3

VENV_DIR=/var/www/rooneyform_app/venv
BACKEND_DIR=/var/www/rooneyform_app/backend
FRONTEND_DIST=/var/www/rooneyform_app/frontend/dist
BACKEND_STATIC=/var/www/rooneyform_app/backend/static

CERTBOT_ROOT=/var/www/certbot
CERTBOT_LIVE_DIR=/etc/letsencrypt/live/rooneyform.store

SYSTEMD_SERVICE=/etc/systemd/system/rooneyform.service
SYSTEMD_ENV_FILE=/etc/rooneyform/rooneyform.env
NGINX_SITE=/etc/nginx/sites-available/rooneyform.conf

VITE_API_URL=https://api.rooneyform.store

TELEGRAM_BOT_TOKEN=
TELEGRAM_ADMIN_CHAT_ID=
TELEGRAM_ADMIN_CHAT_IDS=
